package bg.infosys.crc.admin.entity.security;

import java.util.List;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.JoinColumn;
import javax.persistence.JoinTable;
import javax.persistence.ManyToMany;
import javax.persistence.Table;

import bg.infosys.common.ws.security.db.entities.AbstractAuthority;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Entity
@Table(name = "authorities", schema = "security")
@Builder
@AllArgsConstructor
@NoArgsConstructor
public class Authority extends AbstractAuthority {
	private static final long serialVersionUID = 8429573338356913471L;
	
	@Column(name = "enabled")
	@Getter @Setter private Boolean enabled;
	public static final String _enabled = "enabled";
	
	@ManyToMany(fetch = FetchType.EAGER)
	 @JoinTable(name = "authorities_permissions", schema = "security", joinColumns
	 	= @JoinColumn(name = "authority_id"), inverseJoinColumns = @JoinColumn(name = "permission_id"))
	@Getter @Setter private List<Permission> permissions;
	 public static final String _permissions = "permissions";
}

