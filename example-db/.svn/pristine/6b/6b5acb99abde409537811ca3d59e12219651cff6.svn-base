package bg.infosys.crc.admin.repository.custom.impl;

import java.util.ArrayList;
import java.util.List;

import javax.persistence.criteria.CriteriaBuilder;
import javax.persistence.criteria.CriteriaQuery;
import javax.persistence.criteria.Predicate;
import javax.persistence.criteria.Root;

import bg.infosys.crc.admin.dto.PagingSorting;
import bg.infosys.crc.admin.entity.config.ParamVisibility;
import bg.infosys.crc.admin.repository.custom.GenericRepository;
import bg.infosys.crc.admin.repository.custom.ParamVisibilityRepositoryCustom;
import bg.infosys.crc.admin.util.SortingUtil;

public class ParamVisibilityRepositoryCustomImpl extends GenericRepository<ParamVisibility> implements ParamVisibilityRepositoryCustom {

	@Override
	public List<ParamVisibility> findAllByFilter(String code, Boolean visible, PagingSorting pagingSorting) {
		CriteriaBuilder builder = criteriaBuilder();
		CriteriaQuery<ParamVisibility> criteria = builder.createQuery(ParamVisibility.class);
		Root<ParamVisibility> root = criteria.from(ParamVisibility.class);
		
		List<Predicate> predicates = new ArrayList<Predicate>();
		
		if (code != null) {			
			predicates.add(builder.like(root.get(ParamVisibility._code), "%" + code + "%"));
		}
		
		if (visible != null) {
			predicates.add(builder.equal(root.get(ParamVisibility._visible), true));
		}
		
		SortingUtil.<ParamVisibility>sort(criteria, builder, root.get(pagingSorting.getSortBy()), pagingSorting.getSortDirection());
		criteria.where(builder.and(predicates.toArray(new Predicate[predicates.size()])));
		
		return createQuery(criteria).setFirstResult(pagingSorting.getPageSize() * pagingSorting.getPageNumber())
									.setMaxResults(pagingSorting.getPageSize())
									.getResultList();
	}

	@Override
	public long countAllByFilter(String code, Boolean visible) {
		CriteriaBuilder builder = criteriaBuilder();
		CriteriaQuery<Long> criteria = builder.createQuery(Long.class);
		Root<ParamVisibility> root = criteria.from(ParamVisibility.class);
		
		criteria.select(builder.countDistinct(root));
		
		List<Predicate> predicates = new ArrayList<Predicate>();
		
		if (code != null) {			
			predicates.add(builder.like(root.get(ParamVisibility._code), "%" + code + "%"));
		}
		
		if (visible != null) {
			predicates.add(builder.equal(root.get(ParamVisibility._visible), visible));
		}
		
		criteria.where(builder.and(predicates.toArray(new Predicate[predicates.size()])));
		
		return createQuery(criteria).getSingleResult();
	}

	@Override
	public boolean isOrderNumUnique(String code, Integer orderNum) {
		CriteriaBuilder builder = criteriaBuilder();
		CriteriaQuery<Long> criteria = builder.createQuery(Long.class);
		Root<ParamVisibility> root = criteria.from(ParamVisibility.class);
		
		criteria.select(builder.countDistinct(root));
		
		List<Predicate> predicates = new ArrayList<Predicate>();
		
		if (orderNum != null) {			
			predicates.add(builder.equal(root.get(ParamVisibility._orderNum), orderNum));
		}
		
		if (code != null) {			
			predicates.add(builder.notEqual(root.get(ParamVisibility._code), code));
		}
		
		criteria.where(builder.and(predicates.toArray(new Predicate[predicates.size()])));
		
		return createQuery(criteria).getSingleResult() > 0;
	}
}
