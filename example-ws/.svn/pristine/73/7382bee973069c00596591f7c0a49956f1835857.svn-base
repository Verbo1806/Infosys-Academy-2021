package bg.infosys.crc.admin.service.mapper;

import org.springframework.stereotype.Service;

import bg.infosys.crc.admin.dto.ProviderDTO;
import bg.infosys.crc.admin.entity.Provider;

@Service
public class ProviderMapper implements IModelMapper<ProviderDTO, Provider> {

	@Override
	public ProviderDTO toDto(Provider entity) {
		return ProviderDTO.builder()
						  .id(entity.getId())
						  .name(entity.getName())
						  .identNum(entity.getIdentNum())
						  .ipRange(entity.getIpRange())
						  .netOwner(entity.getNetOwner())
						  .active(entity.getActive())
						  .build();
	}

	@Override
	public Provider toEntity(ProviderDTO dto) {
		return Provider.builder()
					   .id(dto.getId())
					   .name(dto.getName())
					   .identNum(dto.getIdentNum())
					   .ipRange(dto.getIpRange())
					   .netOwner(dto.getNetOwner())
					   .active(dto.getActive())
					   .build();
	}

}
