package bg.infosys.crc.admin.dto;

import java.util.List;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;
import javax.validation.constraints.Size;

import com.fasterxml.jackson.annotation.JsonInclude;
import com.fasterxml.jackson.annotation.JsonInclude.Include;

import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@Builder
@NoArgsConstructor
@AllArgsConstructor
@JsonInclude(Include.NON_NULL)
@ApiModel(description = "Class representing an authority in the application")
public class AuthorityDTO {
	@ApiModelProperty(notes = "Unique identifier of the Authority.", example = "1", required = true, position = 0)
	@NotNull(message = "'id' cannot be null")
	@Setter private Integer id;
	
	@ApiModelProperty(notes = "Name of the Authority.", example = "ADMIN", required = true, position = 1)
	@NotBlank(message = "'name' cannot be blank")
	@Size(max = 128, message = "'name' length must be less than 129 characters")
	private String name;
	
	@ApiModelProperty(notes = "Description of the Authority.", example = "Роля Администратор", required = false, position = 2)
	@Size(max = 255, message = "'description' length must be less than 256 characters")
	private String description;
	
	@ApiModelProperty(notes = "State of the Authority.", example = "true", required = true, position = 3)
	@NotNull(message = "'enabled' cannot be null")
	private Boolean enabled;
	
	@ApiModelProperty(notes = "Authority's permissions.", required = true, position = 4)
	private List<PermissionDTO> permissions;
}

