package bg.infosys.crc.admin.service.mapper;

import org.springframework.stereotype.Service;

import bg.infosys.crc.admin.dto.ParamVisibilityDTO;
import bg.infosys.crc.admin.entity.config.ParamVisibility;

@Service
public class ParamVisibilityMapper implements IModelMapper<ParamVisibilityDTO, ParamVisibility> {

	@Override
	public ParamVisibilityDTO toDto(ParamVisibility entity) {
		return ParamVisibilityDTO.builder()
							  .code(entity.getCode())
							  .visible(entity.getVisible())
							  .orderNum(entity.getOrderNum())
							  .build();
	}

	@Override
	public ParamVisibility toEntity(ParamVisibilityDTO dto) {
		return ParamVisibility.builder()
							  .code(dto.getCode())
							  .visible(dto.getVisible())
							  .orderNum(dto.getOrderNum())
							  .build();
	}

}
