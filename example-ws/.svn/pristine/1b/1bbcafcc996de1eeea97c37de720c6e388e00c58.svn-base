package bg.infosys.crc.admin.controller;

import java.util.List;
import java.util.Optional;

import javax.validation.Valid;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.security.access.annotation.Secured;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;

import bg.infosys.crc.admin.config.ControllerConfig;
import bg.infosys.crc.admin.config.Permissions;
import bg.infosys.crc.admin.controller.docs.IMeasurementParameterController;
import bg.infosys.crc.admin.dto.LitePage;
import bg.infosys.crc.admin.dto.MeasurementParameterDTO;
import bg.infosys.crc.admin.dto.PagingSorting;
import bg.infosys.crc.admin.service.MeasurementParameterService;
import lombok.RequiredArgsConstructor;

@RestController
@RequiredArgsConstructor
@RequestMapping(ControllerConfig.MEASUREMENT_PARAMETERS_URL)
public class MeasurementParameterController implements IMeasurementParameterController {
	private final MeasurementParameterService measurementParameterService;
	
	@GetMapping
	@ResponseStatus(HttpStatus.OK)
	@Secured(Permissions.MODIFY_INFO)
	public List<MeasurementParameterDTO> findAll() {
		return measurementParameterService.findAll();
	}
	
	@GetMapping("/paging")
	@ResponseStatus(HttpStatus.OK)
	@Secured(Permissions.MODIFY_INFO)
	public LitePage<MeasurementParameterDTO> findAllPageable(
		   @RequestParam(defaultValue = "0") int page,
	       @RequestParam(defaultValue = "5") int size,
	       @RequestParam(defaultValue = "code", required = false) String sortBy,
	       @RequestParam(defaultValue = "asc", required = false) String sortDirection,
	       @RequestParam(required = false) String code,
	       @RequestParam(required = false) String type) {

		return measurementParameterService.findAllByFilter(code, type, new PagingSorting(page, size, sortBy, sortDirection));
	}
	
	@GetMapping("/{entityId}")
	@ResponseStatus(HttpStatus.OK)
	@Secured(Permissions.MODIFY_INFO)
	public ResponseEntity<MeasurementParameterDTO> findOne(@PathVariable String entityId) {
		Optional<MeasurementParameterDTO> entity = measurementParameterService.findById(entityId);
	    return entity.map(ResponseEntity::ok).orElseGet(()-> ResponseEntity.notFound().build());
	}
	
	@PutMapping("/{entityId}")
	@ResponseStatus(HttpStatus.OK)
	@Secured(Permissions.MODIFY_INFO)
	public ResponseEntity<MeasurementParameterDTO> update(@PathVariable String entityId, @RequestBody @Valid MeasurementParameterDTO entity) {
		MeasurementParameterDTO updatedEntity = measurementParameterService.update(entity, entityId);
		return ResponseEntity.status(200).body(updatedEntity);
	}
}
