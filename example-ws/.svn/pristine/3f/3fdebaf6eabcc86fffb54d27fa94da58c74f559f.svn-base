package bg.infosys.crc.admin.controller.docs;

import java.util.List;

import org.springframework.http.ResponseEntity;

import bg.infosys.crc.admin.dto.LitePage;
import bg.infosys.crc.admin.dto.MeasurementCycleDTO;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;

@Api(tags = "Measurement Cycle")
public interface IMeasurementCycleController {

	@ApiOperation(value = "Find all Cycles", notes = "This method will return all Cycles")
	public List<MeasurementCycleDTO> findAll();
	
	@ApiOperation(value = "Return one page of Cycles", notes = "This method will return one page of Cycles matching the passed filters")
	public LitePage<MeasurementCycleDTO> findAllPageable(int page, int size, String sortBy, String sortDirection, String name, Boolean enabled);
	
	@ApiOperation(value = "Find one Cycle", notes = "This method will return Cycle matching the passed id or HTTP Status 404 Not Found")
	public ResponseEntity<MeasurementCycleDTO> findOne(Integer entityId);
	
	@ApiOperation(value = "Create Cycle", notes = "This method will create Cycle")
	public ResponseEntity<MeasurementCycleDTO> create(MeasurementCycleDTO entity);
	
	@ApiOperation(value = "Update Cycle", notes = "This method will update the Cycle with given id or HTTP Status 404 Not Found")
	public ResponseEntity<MeasurementCycleDTO> update(Integer entityId, MeasurementCycleDTO entity);
}
