<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>bg.infosys.crc</groupId>
	<artifactId>crc-admin-ws</artifactId>
	<packaging>war</packaging>
	<version>1.0</version>

	<repositories>
		<repository>
			<id>infosys-m2</id>
			<name>Infosys Maven2 Repository</name>
			<url>http://devops.infosys.bg/artifactory/maven2</url>
		</repository>
	</repositories>
		
	<properties>
		<!-- Java and Maven plug-ins Versions -->
		<v.java>11</v.java>
		<v.compiler.plugin>3.8.1</v.compiler.plugin>
		<maven.compiler.source>1.8</maven.compiler.source>
     	<maven.compiler.target>1.8</maven.compiler.target>
		
		<!-- Infosys Common WS -->
		<v.infosys.common.ws>1.6</v.infosys.common.ws>

		<!-- Javax Servlet Api Version -->
		<v.javax.servlet>3.0.1</v.javax.servlet>

		<!-- Java Mail Api Version -->
		<v.mail>1.4</v.mail>
		
		<!-- Swagger Version -->
		<v.springfox.swaagger>2.9.2</v.springfox.swaagger>
	
		<!-- Javax Validation Version -->
		<v.javax.validation>2.0.1.Final</v.javax.validation>
		
		<!-- Hibernate Validator Version -->
		<v.hibernate.validator>6.1.5.Final</v.hibernate.validator>
		
		<!-- Spring AOP Version -->
		<v.spring.aop>5.2.12.RELEASE</v.spring.aop>
		
		<!-- Jackson Datatype -->
		<v.jackson-datatype>2.11.3</v.jackson-datatype>
		
		<!-- Default encoding -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<!-- DB Project Dependency -->
		<dependency>
			<groupId>bg.infosys.crc</groupId>
			<artifactId>crc-admin-db</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<!-- Infosys Common WS Dependency -->
		<dependency>
			<groupId>bg.infosys.common</groupId>
			<artifactId>infosys-common-ws</artifactId>
			<version>${v.infosys.common.ws}</version>
		</dependency>
		
		<!-- Javax Servlet Api -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>${v.javax.servlet}</version>
			<scope>provided</scope>
		</dependency>
		
		<!-- Java Mail API -->
		<dependency>
			<groupId>javax.mail</groupId>
			<artifactId>mail</artifactId>
			<version>${v.mail}</version>
		</dependency>
		
		<!-- Swagger -->
		<dependency>
		    <groupId>io.springfox</groupId>
		    <artifactId>springfox-swagger2</artifactId>
		    <version>${v.springfox.swaagger}</version>
		</dependency>
		
		<dependency>
		    <groupId>io.springfox</groupId>
		    <artifactId>springfox-swagger-ui</artifactId>
		    <version>${v.springfox.swaagger}</version>
		</dependency>
		
		<dependency>
		   <groupId>io.springfox</groupId>
		   <artifactId>springfox-bean-validators</artifactId>
		   <version>${v.springfox.swaagger}</version>
		</dependency>
		
		<!-- Java Validation -->
		<dependency>
		    <groupId>javax.validation</groupId>
		    <artifactId>validation-api</artifactId>
		    <version>${v.javax.validation}</version>
		</dependency>
		
		<dependency>
		    <groupId>org.hibernate.validator</groupId>
		    <artifactId>hibernate-validator</artifactId>
		   <version>${v.hibernate.validator}</version>
		</dependency>
		
		<dependency>
		    <groupId>org.hibernate.validator</groupId>
		    <artifactId>hibernate-validator-annotation-processor</artifactId>
		   	<version>${v.hibernate.validator}</version>
		</dependency>
		
		<!-- Spring AOP -->
		<dependency>
		    <groupId>org.springframework</groupId>
		    <artifactId>spring-aop</artifactId>
		    <version>${v.spring.aop}</version>
		</dependency>
		
		<!-- Jackson Datatype -->
		<dependency>
		    <groupId>com.fasterxml.jackson.datatype</groupId>
		    <artifactId>jackson-datatype-jsr310</artifactId>
		    <version>${v.jackson-datatype}</version>
		</dependency>
	</dependencies>

</project>
