import org.springframework.http.ResponseEntity;

import bg.infosys.crc.admin.dto.LitePage;
import bg.infosys.crc.admin.dto.MeasurementParameterDTO;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;

@Api(tags = "Measurement Parameter")
public interface IMeasurementParameterController {

	@ApiOperation(value = "Find all Parameters", notes = "This method will return all Parameters")
	public List<MeasurementParameterDTO> findAll();
	
	@ApiOperation(value = "Return one page of Parameters", notes = "This method will return one page of Parameters matching the passed filters")
	public LitePage<MeasurementParameterDTO> findAllPageable(int page, int size, String sortBy, String sortDirection, String code, String type);
	
	@ApiOperation(value = "Find one Parameter", notes = "This method will return Parameter matching the passed id or HTTP Status 404 Not Found")
