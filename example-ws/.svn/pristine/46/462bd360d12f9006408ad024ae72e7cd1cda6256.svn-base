package bg.infosys.crc.admin.controller.docs;

import java.util.List;

import javax.validation.Valid;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;

import bg.infosys.crc.admin.dto.LitePage;
import bg.infosys.crc.admin.dto.WebAppLabelDTO;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;

@Api(tags = "WebAppLabels")
public interface IWebAppLabelController {

	@ApiOperation(value = "Find all Web App Labels", notes = "This method will return all Web App Labels")
	public List<WebAppLabelDTO> findAll();
	
	@ApiOperation(value = "Return one page of Web App Labels", notes = "This method will return one page of Web App Labels matching the passed filters")
	public LitePage<WebAppLabelDTO> findAllPageable(int page, int size, String sortBy, String sortDirection, String code, String language);
	
	@ApiOperation(value = "Find one Web App Label", notes = "This method will return Web App Label matching the passed id or HTTP Status 404 Not Found")
	public ResponseEntity<WebAppLabelDTO> findOne(@PathVariable String entityId);
	
	@ApiOperation(value = "Update Web App Label", notes = "This method will update the Web App Label with given id or HTTP Status 404 Not Found")
	public ResponseEntity<WebAppLabelDTO> update(@PathVariable String entityId, @RequestBody @Valid WebAppLabelDTO entity);
}
