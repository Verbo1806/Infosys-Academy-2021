package bg.infosys.crc.admin.controller.docs;

import java.util.List;

import org.springframework.http.ResponseEntity;

import bg.infosys.crc.admin.dto.LitePage;
import bg.infosys.crc.admin.dto.ProviderDTO;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;

@Api(tags = "Providers")
public interface IProviderController {

	@ApiOperation(value = "Find all Providers", notes = "This method will return all Providers")
	public List<ProviderDTO> findAll();
	
	@ApiOperation(value = "Return one page of Providers", notes = "This method will return one page of Providers matching the passed filters")
	public LitePage<ProviderDTO> findAllPageable(int page, int size, String sortBy, String sortDirection, String name, String identNum, Boolean active);
	
	@ApiOperation(value = "Find one Provider", notes = "This method will return Provider matching the passed id or HTTP Status 404 Not Found")
	public ResponseEntity<ProviderDTO> findOne(Integer entityId);
	
	@ApiOperation(value = "Create Provider", notes = "This method will create Provider")
	public ResponseEntity<ProviderDTO> create(ProviderDTO entity);
	
	@ApiOperation(value = "Update Provider", notes = "This method will update the Provider with given id or HTTP Status 404 Not Found")
	public ResponseEntity<ProviderDTO> update(Integer entityId, ProviderDTO entity);
}
