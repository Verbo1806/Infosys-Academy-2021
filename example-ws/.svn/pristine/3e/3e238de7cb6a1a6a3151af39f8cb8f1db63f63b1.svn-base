package bg.infosys.crc.admin.dto;

import com.fasterxml.jackson.annotation.JsonInclude;
import com.fasterxml.jackson.annotation.JsonInclude.Include;

import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;

@Getter
@Builder
@NoArgsConstructor
@AllArgsConstructor
@JsonInclude(Include.NON_NULL)
@ApiModel(description = "Class representing an aditional measurement data in the application")
public class MeasurementDTO {
	@ApiModelProperty(notes = "Ping in milliseconds", example = "110", position = 0)
	private Integer ping;
	
	@ApiModelProperty(notes = "Download speed in Megabits per second (Mbps)", example = "18", position = 1)
	private Integer downloadSpeed;
	
	@ApiModelProperty(notes = "Upload speed in Megabits per second (Mbps)", example = "1", position = 2)
	private Integer uploadSpeed;
	
	@ApiModelProperty(notes = "!", example = "!", position = 3)
	private Integer provider;
}
