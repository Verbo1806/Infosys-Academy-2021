package bg.infosys.crc.admin.dto;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;
import javax.validation.constraints.Positive;
import javax.validation.constraints.PositiveOrZero;
import javax.validation.constraints.Size;

import com.fasterxml.jackson.annotation.JsonInclude;
import com.fasterxml.jackson.annotation.JsonInclude.Include;

import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@Builder
@NoArgsConstructor
@AllArgsConstructor
@JsonInclude(Include.NON_NULL)
@ApiModel(description = "Class representing a speed configuration in the application")
public class SpeedDTO {
	@ApiModelProperty(notes = "Unique identifier of the Speed.", example = "1", required = true, position = 0)
	@Setter private Integer id;
	
	@ApiModelProperty(notes = "Name of the speed", example = "Speed 1", required = true, position = 1)
	@NotBlank(message = "'name' cannot be blank")
	@Size(max = 255, message = "'name' length must be less than 256 characters")
	private String name;
	
	@ApiModelProperty(notes = "Speed range from", example = "1", required = true, position = 2)
	@NotNull(message = "'rangeFrom' mcannot be null")
	@PositiveOrZero(message = "'rangeFrom' must be a positive number or zero")
	private Integer rangeFrom;
	
	@ApiModelProperty(notes = "Speed range to", example = "10", required = false, position = 3)
	@Positive(message = "'rangeTo' must be a positive number")
	private Integer rangeTo;
	
	@ApiModelProperty(notes = "State of the speed", example = "true", required = false, position = 4)
	private Boolean active;
}
