package bg.infosys.crc.admin.dto;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;
import javax.validation.constraints.Positive;
import javax.validation.constraints.Size;

import com.fasterxml.jackson.annotation.JsonInclude;
import com.fasterxml.jackson.annotation.JsonInclude.Include;

import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@Builder
@NoArgsConstructor
@AllArgsConstructor
@JsonInclude(Include.NON_NULL)
@ApiModel(description = "Class representing a cycle configuration in the application")
public class MeasurementCycleDTO {
	@ApiModelProperty(notes = "Unique identifier of the Provider", example = "1", required = true, position = 0)
	@Setter private Integer id;
	
	@ApiModelProperty(notes = "Cycle name", example = "Configuration â„–1", required = true, position = 1)
	@NotBlank(message = "'name' cannot be blank")
	@Size(max = 255, message = "'name' length must be less than 256 characters")
	private String name;
	
	@ApiModelProperty(notes = "Loop count of the configuration", example = "8", required = true, position = 2)
	@Positive(message = "'loopCount' must be a positive number")
	private Integer loopCount;
	
	@ApiModelProperty(notes = "Time between two measurements (in minutes)", example = "10", required = true, position = 3)
	@Positive(message = "'timeBetween' must be a positive number")
	private Integer timeBetween; // in minutes
	
	@ApiModelProperty(notes = "State of the confuguration", example = "true", required = false, position = 4)
	@NotNull(message = "'enabled' cannot be null")
	private Boolean enabled;
}
