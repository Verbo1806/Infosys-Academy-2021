package bg.infosys.crc.admin.controller.docs;

import java.util.List;

import javax.validation.Valid;

import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;

import bg.infosys.crc.admin.dto.LitePage;
import bg.infosys.crc.admin.dto.SpeedDTO;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;

@Api(tags = "Speeds")
public interface ISpeedController {

	@ApiOperation(value = "Find all Speeds", notes = "This method will return all Speeds")
	public List<SpeedDTO> findAll();
	
	@ApiOperation(value = "Return one page of Speeds", notes = "This method will return one page of Speeds matching the passed filters")
	public LitePage<SpeedDTO> findAllPageable(int page, int size, String sortBy, String sortDirection, String name, Integer rangeFrom, Integer rangeTo, Boolean active);
	
	@ApiOperation(value = "Find one Speed", notes = "This method will return Speed matching the passed id or HTTP Status 404 Not Found")
	public ResponseEntity<SpeedDTO> findOne(@PathVariable Integer entityId);
	
	@ApiOperation(value = "Create Speed", notes = "This method will create Speed")
	public ResponseEntity<SpeedDTO> create(@RequestBody @Valid SpeedDTO entity);
	
	@ApiOperation(value = "Update Speed", notes = "This method will update the Speed with given id or HTTP Status 404 Not Found")
	public ResponseEntity<SpeedDTO> update(@PathVariable Integer entityId, @RequestBody @Valid SpeedDTO entity);
}
