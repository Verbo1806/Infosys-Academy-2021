package bg.infosys.crc.admin.dto;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.Size;

import com.fasterxml.jackson.annotation.JsonInclude;
import com.fasterxml.jackson.annotation.JsonInclude.Include;

import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@Builder
@NoArgsConstructor
@AllArgsConstructor
@JsonInclude(Include.NON_NULL)
@ApiModel(description = "Class representing a measurement parameter in the application")
public class MeasurementParameterDTO {
	@ApiModelProperty(notes = "Unique string identifier of the Parameter", example = "QM_SLOWSTART", required = true, position = 0)
	@NotBlank(message = "'code' cannot be blank")
	@Size(max = 16, message = "'code' length must be less than 17 characters")
	@Setter private String code;
	
	@ApiModelProperty(notes = "Value of the Parameter", example = "1", required = true, position = 1)
	@NotBlank(message = "'value' cannot be blank")
	@Size(max = 255, message = "'value' length must be less than 256 characters")
	private String value;
	
	@ApiModelProperty(notes = "Value type of the Parameter", example = "INT", required = true, position = 2)
	@NotBlank(message = "'valueType' cannot be blank")
	@Size(max = 16, message = "'valueType' length must be less than 17 characters")
	private String valueType;

	@ApiModelProperty(notes = "Measurement type of the Parameter", example = "QM", required = true, position = 3)
	@NotBlank(message = "'measurementType' cannot be blank")
	@Size(max = 8, message = "'measurementType' length must be less than 9 characters")
	private String measurementType;
	
	@ApiModelProperty(notes = "Description of the Parameter", example = "Период на изпращане на slowstartX.dat", required = true, position = 4)
	@NotBlank(message = "'description' cannot be blank")
	@Size(max = 1024, message = "'description' length must be less than 1025 characters")
	private String description;
}
