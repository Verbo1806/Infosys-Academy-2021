package bg.infosys.crc.admin.service.mapper;

import org.springframework.stereotype.Service;

import bg.infosys.crc.admin.dto.CheckTypeDTO;
import bg.infosys.crc.admin.dto.QualityCheckDTO;
import bg.infosys.crc.admin.entity.config.QualityCheck;

@Service
public class QualityCheckMapper implements IModelMapper<QualityCheckDTO, QualityCheck> {

	@Override
	public QualityCheckDTO toDto(QualityCheck entity) {
		return QualityCheckDTO.builder()
							  .uuid(entity.getUuid())
							  .applicantIP(entity.getApplicantIP())
							  .type(CheckTypeDTO.toDto(entity.getType()))
							  .checkTS(entity.getCheckTS())
							  .isSuccessful(entity.getIsSuccessful())
							  .build();
	}

	@Override
	public QualityCheck toEntity(QualityCheckDTO dto) {
		return QualityCheck.builder()
							.uuid(dto.getUuid())
							.applicantIP(dto.getApplicantIP())
							.type(CheckTypeDTO.toEntity(dto.getType()))
							.checkTS(dto.getCheckTS())
							.isSuccessful(dto.getIsSuccessful())
							.build();
	}

}
