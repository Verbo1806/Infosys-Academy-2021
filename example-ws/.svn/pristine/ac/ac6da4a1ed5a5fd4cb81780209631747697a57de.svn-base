package bg.infosys.crc.admin.service;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.stereotype.Service;

import bg.infosys.crc.admin.dto.RegionDTO;
import bg.infosys.crc.admin.repository.RegionRepository;
import bg.infosys.crc.admin.service.mapper.RegionMapper;
import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
public class LocationService {
	private final RegionRepository regionRepository;
	private final RegionMapper regionMapper;
	
	public List<RegionDTO> findAllRegions() {
		return regionRepository.findAll().stream()
										  .map(s -> regionMapper.toDto(s))
										  .collect(Collectors.toList());
	}
}
