package bg.infosys.crc.admin.controller.exception;

import bg.infosys.crc.admin.controller.error.APIErrorCodes;
import lombok.Getter;

@Getter
public class BadRequestException extends RuntimeException { 
	private static final long serialVersionUID = -1611912779693159799L;

	private String code;
	private String description;
	
	public BadRequestException(APIErrorCodes error) {
		super(error.getMessage());
		this.code = error.getCode();
		this.description = error.getDescription();
    }
}
