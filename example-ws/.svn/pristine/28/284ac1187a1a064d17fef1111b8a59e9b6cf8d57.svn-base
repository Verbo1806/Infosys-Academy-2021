package bg.infosys.crc.admin.service.mapper;

import org.springframework.stereotype.Service;

import bg.infosys.crc.admin.dto.RegionDTO;
import bg.infosys.crc.admin.entity.Region;

@Service
public class RegionMapper implements IModelMapper<RegionDTO, Region> {

	@Override
	public RegionDTO toDto(Region entity) {
		return RegionDTO.builder()
						  .code(entity.getCode())
						  .name(entity.getName())
						  .build();
	}

	@Override
	public Region toEntity(RegionDTO dto) {
		return Region.builder()
						.code(dto.getCode())
						.name(dto.getName())
						.build();
	}

}
